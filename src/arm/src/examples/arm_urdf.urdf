<robot name="robot_arm">
 	<link name="base">
		<visual>
		    <origin xyz="0 0 0.0225" rpy="0 0 0"/>
			<geometry>
				<cylinder length="0.050" radius="0.089"/>
			</geometry>
		</visual>	
	</link>

    <link name="TSL">
		<visual>
          	<geometry>
                <box size="0.05 0.05 0.053" />
			</geometry>
		</visual>	
	</link>
    
    <joint name="turntable" type="revolute">
      <parent link="base"/>
      <child link="TSL"/>
      <origin xyz="0 0 0.072" rpy="0 0 0" />
      <axis xyz="0 0 -1"/>
    </joint>
    
    <link name="upper_arm">
		<visual>
          <origin xyz="0 0 0.25" rpy="0 0 0" />
          	<geometry>
            	<cylinder length="0.5" radius="0.022"/>
			</geometry>
		</visual>	
	</link>
    <joint name="shoulder" type="revolute">
      <parent link="TSL"/>
      <child link="upper_arm"/>
      <origin xyz="0 0 0.027" rpy="0 0 0" />
      <axis xyz="1 0 0"/>
      <limit lower="-0.9" upper="0.9" />
    </joint>
    
    <link name="EFL">
		<visual>
          <origin xyz="0 0 0.2" rpy="0 0 0" />
          	<geometry>
            	<cylinder length="0.1" radius="0.0175"/>
			</geometry>
		</visual>	
	</link>

    <joint name="elbow" type="revolute">
      <parent link="upper_arm"/>
      <child link="EFL"/>
      <origin xyz="0 0 0.5" rpy="0 0 0" />
      <axis xyz="1 0 0"/>
        <limit lower="-2.8" upper="2.8" />
    </joint>
    
    <link name="forearm">
		<visual>
          <origin xyz="0 0 0.045" rpy="0 0 0" />
          	<geometry>
            	<box size="0.09 0.03 0.045" />
			</geometry>
		</visual>	
    </link>

    <joint name="forearm_rotation" type="revolute">
      <parent link="EFL"/>
      <child link="forearm"/>
      <origin xyz="0 0 0.35" rpy="0 0 0" />
      <axis xyz="0 0 -1"/>
      <limit lower="-1.57" upper="2.8" />       
    </joint>
    
    <link name="hand">
		<visual>
          <origin xyz="0 0 0.05" rpy="0 0 0" />
          	<geometry>
            	<cylinder length="0.1" radius="0.02"/>
			</geometry>
		</visual>	
	</link>

  <joint name="wrist" type="revolute">
      <parent link="forearm"/>
      <child link="hand"/>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
      <axis xyz="-1 0 0"/>
      <limit lower="-2.5" upper="2.5" />       
    </joint>
    
    <link name="end_effector">
		<visual>
          <origin xyz="0 0 0.05" rpy="0 0 0" />
          	<geometry>
            	<box size="0.02 0.02 0.1" />
			</geometry>
		</visual>	
	</link>

    <joint name="hand_rotation" type="revolute">
      <parent link="hand"/>
      <child link="end_effector"/>
      <origin xyz="0 0 0.045" rpy="0 0 0" />
      <axis xyz="0 0 1"/>
    </joint>
    
</robot>