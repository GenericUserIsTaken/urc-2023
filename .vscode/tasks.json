{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"type": "colcon",
			"args": [
				"build",
				"--symlink-install",
				"--base-paths",
				"/home/trickfire/NasaRmc2022",
				"--cmake-args",
				"-DCMAKE_BUILD_TYPE=Debug"
			],
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "test",
			"dependsOn": ["pre-test"],
			"type": "colcon",
			"args": [
				"test-result",
				"--test-result-base",
				"/home/trickfire/NasaRmc2022",
				"--verbose"
			],
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "pre-test",
			"type": "colcon",
			"args": [
				"test",
				"--base-paths",
				"/home/trickfire/NasaRmc2022"
			],
			"problemMatcher": [
				"$catkin-gcc"
			],
			"group": "test"
		},
		{
			"label": "purge",
			"type": "shell",
            "command": "rm -rf ${workspaceFolder}/build ${workspaceFolder}/install ${workspaceFolder}/log",
			"problemMatcher": []
        },
	]
}